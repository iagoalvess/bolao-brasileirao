{
 "version": "0.2.0",
 "configurations": [
     {
         "name": "Debug FastAPI",
         "type": "python",
         "request": "launch",
         "module": "uvicorn",
         "args": [
             "app.main:app",
             "--host",
             "127.0.0.1",
             "--port",
             "8000",
             "--reload"
         ],
         "cwd": "${workspaceFolder}/backend",
         "env": {
             "PYTHONPATH": "${workspaceFolder}/backend"
         },
         "jinja": true,
         "justMyCode": false
     }
 ]
}